{% extends 'base.html.twig' %}

{% block title %}Hello AppController!
{% endblock %}

{% block body %}
	{% include "components/_navbar.html.twig" %}

	<div class="container">
		<a href="{{path("posts.create")}}" class="btn btn-primary">
			add post
		</a>
		<a href="{{path("categories.create")}}" class="btn btn-primary">
			add category
		</a>

		<div class="row mt-5">
			{% for post in post_list %}
				<div class="col-md-3">
					<div class="card">
						{% if post.image %}
							<img src="{{ post.image }}" alt="" class="card-img-top">
						{% endif %}
						<div class="card-body">
							<a href="{{ path("posts.show", {id: post.id}) }}">
								<h2 class="card-title">{{ post.title | upper }}</h2>
							</a>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>

{% endblock %}
